    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/manage.py"
        },
        {
            "name": "Debug Celery Worker",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "args": [
                "-A",
                "fb_automation", // Substitua pelo nome do seu projeto
                "worker",
                "-l",
                "info",
                "--pool=solo" // Essencial para debug com breakpoints
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "DJANGO_SETTINGS_MODULE": "fb_automation.settings"
            }
        }
    ]
}